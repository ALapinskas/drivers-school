{
  "name": "phaser3-boilerplate",
  "version": "0.0.3",
  "description": "phaser3 game boilerplate",
  "main": "./src/main.js",
  "type": "module",
  "scripts": {
    "start": "./node_modules/.bin/autoreload-server -W 'dist/**.{html,css,js}' --reload true -m ./assets -t /assets -m ./src -t /src ./dist 8088",
    "start-win": ".\\node_modules\\.bin\\autoreload-server --reload true -m ./assets -t /assets -m ./src -t /src .\\dist 8088",
    "copy-libs": "mkdir ./dist/lib  && cp -R ./node_modules/phaser ./node_modules/phaser3-rex-plugins ./dist/lib",
    "copy-libs-win": "mkdir .\\dist\\lib | robocopy /S .\\node_modules\\phaser .\\dist\\lib\\phaser > nul | robocopy /S .\\node_modules\\phaser3-rex-plugins .\\dist\\lib\\phaser3-rex-plugins > nul",
    "build-prod": "./node_modules/.bin/google-closure-compiler --js='./src/**.js' --js_output_file='./dist/main.min.js'"
  },
  "author": "Arturas-Alfredas Lapinskas",
  "license": "MIT",
  "dependencies": {
    "phaser": "3.55.2",
    "phaser3-rex-plugins": "1.1.75"
  },
  "devDependencies": {
    "simple-autoreload-server": "0.2.15",
    "google-closure-compiler": "20221004.0.0"
  }
}
